pipeline {
    agent any

    environment {
        $DOCKER_USERNAME = credentials('jkapse51').username
        $DOCKER_PASSWORD = credentials('dckr_pat_l7GLM8LvJCisqfE7_CwLswIYF4Y').password
    }

    stages {
        stage('Build and Deploy') {
            steps {
                script {
                    // Checkout the code from Git
                    checkout scm

                    // Determine the branch
                    def branchName = env.GIT_BRANCH

                    // Run the build and deploy scripts based on the branch
                    if (branchName == 'origin/dev') {
                        sh './build.sh'
                        sh './deploy.sh dev'
                    } else if (branchName == 'origin/main') {
                        sh './build.sh'
                        sh './deploy.sh prod'
                    } else {
                        echo "Skipping build and deploy for branch ${branchName}"
                    }
                }
            }
        }
    }
}
